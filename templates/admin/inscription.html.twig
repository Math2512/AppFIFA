{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    {{form_start(form)}}
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.username, {'label':'Username'}) }}
        </div>
        {% if form.password is defined %}
        <div class="col-md-12">
            {{ form_row(form.password, {'label':'Mot de passe', 'type':'password'}) }}
        </div>
        {% endif %}
        <div class="col-md-12">
            {{ form_row(form.imageFile, {'label':'Photo'}) }}
        </div>
    </div>

    {% if form.password is defined %}
    <button type='submit' class="btn btn-primary">Cr√©er</button>
    {% else %}
    <button type='submit' class="btn btn-primary">Modifier</button>
    {% endif %}
    {{form_end(form)}}
</div>
{% endblock %}